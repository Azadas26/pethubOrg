<div>
    <div class="container-fluid">

        <div class="row">
            <div class="col-md-6 " style="background-color: #343a40; text-align: center;">

                <a href="/intocart" class="btn btn-dark" style="width: 100%; color: #ffc107;" id="pets">PETS CART</a>
            </div>
            <div class="col-md-6 " style="background-color: #ffc107;text-align: center;">
                <a href="/intocart2" class="btn btn-warning" style="width: 100%;">ùòºùòæùòæùôÄùôéùôéùôäùôçùôÑùôÄùôé<b> / FOOD
                        CART</b> </a>
            </div>

        </div>


        {{#if products}}
        <div class="row" style="background-color: black;">
            <div class="col-12 col-md-12 p-5">
                <table class="table " style="text-align:center ;">
                    <thead>
                        <tr style="color: white; font-size: 24px;">
                            <th scope="col">NO.</th>
                            <th scope="col">Image</th>
                            <th scope="col">Product_Name</th>
                            <th scope="col">Price</th>
                            <th scope="col">Quantity</th>
                            <th scope="col">Coose Option...</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each products}}
                        <tr style="color: white; font-size: 20px;">

                            <td>{{@index}}</td>
                            <td><a href=""><img src="/user-image/{{this.pro._id}}1.jpg" width="150px" height="100px"
                                        alt=""></a>
                            </td>
                            <td><a href="" style="text-decoration: none; color: white;">{{this.pro.petinfo.pname}}</a>
                            </td>
                            <td><a href="" style="text-decoration: none; color: white;">{{this.pro.petinfo.price}}</a>
                            </td>
                            <td>
                                    <button type="button" class="m-2" onclick="cartqut('{{this._id}}','{{this.item}}','{{this.qut}}',1)">+</button> 
                                    <span id="{{this.item}}">{{this.qut}}</span> 
                                    <button type="button" class="m-2" onclick="cartqut('{{this._id}}','{{this.item}}','{{this.qut}}',-1)">-</button>
                            </td>
                            <td>
                                <a href="/cartremove?id={{this._id}}" class="btn btn-danger mt-4"
                                    onclick="return confirm('Are you sure to remove this')">Remove <b>X</b></a>

                            </td>

                        </tr>
                        {{/each}}
                    </tbody>
                </table>
                <div class="float-right m-5">
                    <h2 class="text-light">Total : <span id="total">{{total}}</span> ‚Çπ</h2>
                    <a href="/placeorder" class="btn btn-success" style="width: 100%;">Place Order</a>
                </div>
            </div>
        </div>
        {{else}}
        <h1 class="text-center mt-5 p-5 text-white">Nothing you selected....</h1>
        {{/if}}
    </div>
</div>


<script>
    var cartqut = (cartId, proId, Quantity, cute) => {

        var q = parseInt(document.getElementById(proId).innerHTML)


        $.ajax({
            url: '/cartqut',
            data: {
                cartid: cartId,
                proid: proId,
                quantity: q,
                cut: parseInt(cute)
            },
            method: 'post',
            success: (response) => {
                if (response.remove) {
                    alert("Your Product is remove from the cart")
                    location.reload()
                }
                else {


                    document.getElementById(proId).innerHTML = q + cute
                    document.getElementById('total').innerHTML = response.total


                }
            }

        })
    }
</script>